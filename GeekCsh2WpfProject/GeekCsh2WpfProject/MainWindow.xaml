<Window x:Class="GeekCsh2WpfProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeekCsh2WpfProject"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        MinHeight="400"
        MinWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="lbEmployee"
                 Grid.Column="1"
                 Margin="0,15,0,0"
                 Background="AntiqueWhite"
                 FontSize="16">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Id}" Width="40"/>
                        <TextBlock Text="{Binding Name}" Width="200"/>
                        <TextBlock Text="{Binding Age}" Width="40"/>
                        <TextBlock Text="{Binding Salary}" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <ComboBox x:Name="cbDepartment"
                  HorizontalAlignment="Left"
                  Margin="15,15,0,0"
                  VerticalAlignment="Top"
                  Width="263" 
                  Height="52" 
                  FontSize="18">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Id}" Width="40"/>
                        <TextBlock Text="{Binding Name}" Width="120"/>    
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <ListBox x:Name="lbDepartment"
                 HorizontalAlignment="Left"
                 Grid.Column="0"
                 Height="215"
                 VerticalAlignment="Top"
                 Width="263" 
                 Margin="15,98,0,0"
                 Background="Azure"
                 FontSize="16">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Id}" Width="40"/>
                        <TextBlock Text="{Binding Name}" Width="120"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
